<style lang="scss">
  $primary-color: #333;
  $secondary-color: #fff;
  $accent-color: #555;
  $link-hover-color: #ddd;

  .footer {
    background-color: $primary-color;
    color: $secondary-color;
    padding: 2rem 1rem;

    .footer-container {
      display: flex;
      flex-wrap: wrap;
      gap: 2rem;
      justify-content: space-between;
      max-width: 1200px;
      margin: 0 auto;
    }

    .footer-section {
      flex: 1 1 calc(33.333% - 2rem);
      min-width: 200px;

      h3 {
        font-size: 1.2rem;
        margin-bottom: 1rem;
      }

      p {
        line-height: 1.5;
      }

      ul {
        list-style: none;
        padding: 0;

        li {
          margin-bottom: 0.5rem;

          a {
            text-decoration: none;
            color: $secondary-color;
            transition: color 0.3s;

            &:hover {
              color: $link-hover-color;
            }
          }
        }
      }
    }

    .social-links {
      display: flex;
      gap: 1rem;

      li {
        a {
          font-size: 1rem;
          color: $secondary-color;
          transition: color 0.3s;

          &:hover {
            color: $link-hover-color;
          }
        }
      }
    }

    .footer-bottom {
      text-align: center;
      margin-top: 2rem;
      font-size: 0.9rem;
      border-top: 1px solid $accent-color;
      padding-top: 1rem;
    }
  }

  // Responsive Design
  @media (max-width: 768px) {
    .footer-container {
      flex-direction: column;
      gap: 1.5rem;
    }
  }
</style>